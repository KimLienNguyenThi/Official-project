@{
    ViewBag.Title = "Phiếu Trả";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .container-fluid {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .row.flex-grow-4 {
        flex: 4; /* Tỷ lệ phần trên */
    }

    .row.flex-grow-7 {
        flex: 7; /* Tỷ lệ phần dưới */
    }

    .table-responsive {
        max-height: 300px; /* Giới hạn chiều cao bảng để tránh bị kéo dài quá mức */
        overflow-y: auto; /* Thêm thanh cuộn nếu bảng dài */
    }

</style>
<!-- Hiển thị danh sách NhanViens -->
<section class="content">
    <div class="container-fluid pt-4">
        <div class="container-fluid" style="height: 100vh; display: flex; flex-direction: column;">
            <!-- Phần trên (chiều cao 4 phần) -->
            <div class="row flex-grow-3" id="phanTren" style="overflow-y: auto;">
                <div class="col-12">
                    <div class="card" style="height: 100%;">
                        <div class="card-header">
                            <h4 class="text-center text-blue text-bold">T.T Phiếu mượn</h4>
                        </div>
