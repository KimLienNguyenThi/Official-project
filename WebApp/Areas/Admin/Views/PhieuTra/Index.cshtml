            <div class="row flex-grow-7" id="phanDuoi" style="overflow-y: auto;">
                <div class="col-12">
                    <div class="card" style="height: 100%;">
                        <div class="card-header">
                            <h4 class="text-center text-blue text-bold">Phiếu trả</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="form-group col">
                                        <label for="selectedMaNhanVien">Mã nhân viên:</label>
                                        <input type="text" class="form-control" id="selectedMaNhanVien" readonly>
                                    </div>
                                    <div class="form-group col">
                                        <label for="selectedMaThe">Mã thẻ độc giả:</label>
                                        <input type="text" class="form-control" id="selectedMaThe" readonly>
                                    </div>
                                    <div class="form-group col">
                                        <label for="selectedName">Tên độc giả:</label>
                                        <input type="text" class="form-control" id="selectedName" readonly>
                                    </div>
                                    <div class="form-group col">
                                        <label for="selectedSDT">Số điện thoại:</label>
                                        <input type="text" class="form-control" id="selectedSDT" readonly>
                                    </div>
                                   
                                </div>
                                
                                <div class="form-row">
                                    <div class="form-group col">
                                        <label for="return_datemuon">Ngày mượn:</label>
                                        <input type="date" class="form-control" id="return_datemuon" readonly>
                                    </div>
                                    <div class="form-group col">
                                        <label for="return_datehan">Hạn trả:</label>
                                        <input type="date" class="form-control" id="return_datehan" readonly>
                                    </div>
                                    <div class="form-group col">
                                        <label for="return_datetra">Ngày trả:</label>
                                        <input type="date" class="form-control" id="return_datetra" readonly>
                                    </div>
                                    <div class="form-group col-4">
                                        <label for="tongTienPhuThu">Tổng tiền:</label>
                                        <input type="text" class="form-control" id="tongTienPhuThu" readonly>
                                    </div>
                                </div>
                                <div class="table-responsive" style="height: 200px; overflow-y: auto;">
                                    <table class="table table-head-fixed table-hover">
                                        <thead>
                                            <tr>
                                                <th>Mã Đ.Sách</th>
                                                <th>Tên sách</th>
                                                <th>SL Mượn</th>
                                                <th>Mã C.Sách</th>
                                                 <th>Trả</th>
                                                <th>Lỗi</th>
                                                <th>Mất</th>
                                                <th>Phụ Thu</th> 
                                            </tr>
                                        </thead>
                                        <tbody id="tableBody"></tbody>
                                    </table>
                                </div>
